{
  "name": "service-typescript",
  "version": "0.1.8",
  "main": "index.js",
  "description": "fulfillmenttools app for commercetools Connect",
  "author": "OC fulfillment GmbH",
  "license": "MIT",
  "private": true,
  "scripts": {
    "precommit": "npm i && npm run build && npm run lint && npm run test",
    "start": "node build/index.js",
    "gcp-build": "cp -r /tmp/lib/shared /workspace && npm run build && npm pack ../shared && npm install shared*",
    "start:dev": "concurrently -k \"tsc --watch\" \"nodemon -q build/index.js\"",
    "build": "npm --prefix ../shared install && npm --prefix ../shared run build && rimraf ./build ./coverage && tsc",
    "build-docker": "DOCKER_BUILDKIT=0 docker build -f Dockerfile ../",
    "build-docker:local": "npm run build-docker -- -t $npm_package_config_docker_image_name",
    "build-docker:arm64": "docker buildx build -f Dockerfile ../ --load --platform linux/arm64 -t $npm_package_config_docker_image_name",
    "run-docker": "docker run -it --rm -p 8080:8080 --env-file=.env.local $npm_package_config_docker_image_name",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "npm run build && jest --config jest.config.cjs",
    "test:coverage": "jest --config jest.config.cjs --coverage --collectCoverageFrom='src/**/*.{ts,jxs}'",
    "test:watch": "jest --watch",
    "connector:post-deploy": "node build/connector/post-deploy.js",
    "connector:pre-undeploy": "node build/connector/pre-undeploy.js",
    "preversion": "npm run build && npm run test && npm run lint",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "postversion": "git add package.json package-lock.json"
  },
  "devDependencies": {
    "@eslint/js": "9.14.0",
    "@jest/globals": "29.7.0",
    "@tsconfig/recommended": "1.0.8",
    "@types/eslint__js": "8.42.3",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.14",
    "@types/jest-when": "3.5.5",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "22.8.4",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.13.0",
    "@typescript-eslint/parser": "8.13.0",
    "auto-changelog": "2.5.0",
    "concurrently": "9.1.0",
    "eslint": "9.14.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.9.0",
    "globals": "15.12.0",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "jest-when": "3.6.0",
    "nodemon": "3.1.7",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "supertest": "6.3.4",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.5.4",
    "typescript-eslint": "8.13.0"
  },
  "dependencies": {
    "@commercetools/platform-sdk": "7.19.0",
    "@fulfillmenttools/fulfillmenttools-sdk-typescript": "0.2.0",
    "body-parser": "1.20.3",
    "dotenv": "16.4.5",
    "express": "4.21.1",
    "jsonwebtoken": "9.0.2",
    "shared": "file:../shared"
  },
  "config": {
    "docker_image_name": "ocff/commercetools-connector-service"
  },
  "engines": {
    "node": ">=20"
  }
}
