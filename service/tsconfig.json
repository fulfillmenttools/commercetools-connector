{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "exclude": ["node_modules", "tmp", "**/*.spec.ts", "**/*.test.ts"],
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./src",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
