{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "exclude": [
    "node_modules",
    "tmp",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2021"
    ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "target": "es2021",
  }
}
