{
  "name": "event-typescript",
  "version": "0.0.11",
  "main": "index.js",
  "description": "CT Connect - Fulfillmenttools App",
  "author": "OC fulfillment GmbH",
  "license": "MIT",
  "private": true,
  "scripts": {
    "precommit": "npm i && npm run build && npm run lint && npm run test",
    "start": "node build/index.js",
    "gcp-build": "cp -r /tmp/lib/shared /workspace && npm run build && npm pack ../shared && npm install shared*",
    "start:dev": "concurrently -k \"tsc --watch\" \"nodemon -q build/index.js\"",
    "build": "npm --prefix ../shared install && npm --prefix ../shared run build && rimraf ./build && tsc",
    "build-docker": "DOCKER_BUILDKIT=0 docker build -f Dockerfile ../",
    "build-docker:local": "npm run build-docker -- -t $npm_package_config_docker_image_name",
    "build-docker:arm64": "docker buildx build . --load --platform linux/arm64 -t $npm_package_config_docker_image_name",
    "run-docker": "docker run -it --rm -p 8080:8080 --env-file=.env.local $npm_package_config_docker_image_name",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --write '**/*.{js,ts}'",
    "test": "npm run build && jest --config jest.config.cjs",
    "test:watch": "jest --watch",
    "connector:post-deploy": "node build/connector/post-deploy.js",
    "connector:pre-undeploy": "node build/connector/pre-undeploy.js",
    "preversion": "npm run build && npm run test && npm run lint",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "postversion": "git add package.json package-lock.json"
  },
  "devDependencies": {
    "@tsconfig/recommended": "1.0.3",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.4",
    "@types/jest-when": "3.5.2",
    "@types/jsonwebtoken": "9.0.2",
    "@types/node": "18.17.15",
    "@types/superagent": "4.1.18",
    "@types/supertest": "2.0.12",
    "@types/uuid": "9.0.4",
    "@types/validator": "13.11.1",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "auto-changelog": "2.4.0",
    "concurrently": "8.2.1",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-eslint-plugin": "5.1.1",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.6.4",
    "jest-extended": "3.2.4",
    "jest-when": "3.6.0",
    "nodemon": "3.0.1",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@commercetools-backend/loggers": "21.25.2",
    "@commercetools/platform-sdk": "4.7.0",
    "@commercetools/sdk-client-v2": "2.1.5",
    "@fulfillmenttools/fulfillmenttools-sdk-typescript": "0.1.6",
    "body-parser": "1.20.2",
    "date-fns": "2.30.0",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "jsonwebtoken": "9.0.2",
    "msw": "1.3.1",
    "shared": "file:../shared",
    "superagent": "8.1.2",
    "tslog": "4.9.2",
    "uuid": "9.0.1",
    "validator": "13.11.0"
  },
  "config": {
    "docker_image_name": "ocff/commercetools-connector-event"
  }
}
