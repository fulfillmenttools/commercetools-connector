{
  "name": "event-typescript",
  "version": "0.1.2",
  "main": "index.js",
  "description": "fulfillmenttools app for commercetools Connect",
  "author": "OC fulfillment GmbH",
  "license": "MIT",
  "private": true,
  "scripts": {
    "precommit": "npm i && npm run build && npm run lint && npm run test",
    "start": "node build/index.js",
    "gcp-build": "cp -r /tmp/lib/shared /workspace && npm run build && npm pack ../shared && npm install shared*",
    "start:dev": "concurrently -k \"tsc --watch\" \"nodemon -q build/index.js\"",
    "build": "npm --prefix ../shared install && npm --prefix ../shared run build && rimraf ./build && tsc",
    "build-docker": "DOCKER_BUILDKIT=0 docker build -f Dockerfile ../",
    "build-docker:local": "npm run build-docker -- -t $npm_package_config_docker_image_name",
    "build-docker:arm64": "docker buildx build -f Dockerfile ../ --load --platform linux/arm64 -t $npm_package_config_docker_image_name",
    "run-docker": "docker run -it --rm -p 8080:8080 --env-file=.env.local $npm_package_config_docker_image_name",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --write '**/*.{js,ts}'",
    "test": "npm run build && jest --config jest.config.cjs",
    "test:watch": "jest --watch",
    "connector:post-deploy": "node build/connector/post-deploy.js",
    "connector:pre-undeploy": "node build/connector/pre-undeploy.js",
    "preversion": "npm run build && npm run test && npm run lint",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "postversion": "git add package.json package-lock.json"
  },
  "devDependencies": {
    "@tsconfig/recommended": "1.0.3",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/jest-when": "3.5.5",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "18.19.21",
    "@types/superagent": "4.1.20",
    "@types/supertest": "2.0.16",
    "@types/uuid": "9.0.8",
    "@types/validator": "13.11.9",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "auto-changelog": "2.4.0",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-eslint-plugin": "5.1.1",
    "eslint-plugin-jest": "27.9.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "jest-when": "3.6.0",
    "nodemon": "3.1.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.5",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@commercetools-backend/loggers": "22.19.0",
    "@commercetools/platform-sdk": "7.4.0",
    "@commercetools/sdk-client-v2": "2.3.0",
    "@fulfillmenttools/fulfillmenttools-sdk-typescript": "0.1.10",
    "body-parser": "1.20.2",
    "date-fns": "2.30.0",
    "dotenv": "16.4.5",
    "express": "4.18.3",
    "jsonwebtoken": "9.0.2",
    "msw": "1.3.2",
    "shared": "file:../shared",
    "superagent": "8.1.2",
    "tslog": "4.9.2",
    "uuid": "9.0.1",
    "validator": "13.11.0"
  },
  "config": {
    "docker_image_name": "ocff/commercetools-connector-event"
  }
}
